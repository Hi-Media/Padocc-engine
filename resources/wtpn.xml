<project name="wtpn">
    <env name="qa" mailto="devaa@twenga.com, devtpn@twenga.com" withsymlinks="true" basedir="/home/ltoussaint/twengaweb/qawtpn">
        <property name="servers" value="ltoussaint@ltoussaint.dev.twenga.local"/>
        <call target="content"/>
    </env>
    <env name="qaws" mailto="devaa@twenga.com, devtpn@twenga.com" withsymlinks="true" basedir="/home/httpd/wtpn.twenga.com">
        <property name="servers" value="${SERVER_DISTRIB_WS_QA}"/>
        <call target="content"/>
    </env>
    <env name="www" mailto="devaa@twenga.com, devtpn@twenga.com" withsymlinks="true" basedir="/home/httpd/wtpn.twenga.com">
        <property name="servers" value="${SERVER_DISTRIB_EXTRANET}"/>
