<?xml version="1.0" encoding="UTF-8"?>
<project name="distrib_demo">
    <env
        name="qa"
        mailto="devaa@twenga.com, laurent.salomon@twenga.com, laurent.toussaint@twenga.com, romain.derocle@twenga.com"
        withsymlinks="true"
        basedir="/home/httpd/distrib_demo"
    >
        <property name="servers" value="www10" />
        <call target="content" />
    </env>

    <env
        name="prod"
        mailto="devaa@twenga.com, laurent.salomon@twenga.com, laurent.toussaint@twenga.com, romain.derocle@twenga.com"
        withsymlinks="true"
        basedir="/home/httpd/distrib_demo"
    >
        <property name="servers" value="www46 www47" />
        <call target="content" />
    </env>

    <target name="content">
        <externalproperty name="ref" description="Ref. to deploy" />
        <gitexport repository="git@git.twenga.com:distribution/demo.git" ref="${REF}"
            destdir="${SERVERS}:${BASEDIR}" />
    </target>
</project>