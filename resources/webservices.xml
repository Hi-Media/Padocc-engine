<?xml version="1.0" encoding="UTF-8"?>
<project name="webservices">
    <env
        name="qa"
        mailto="devaa@twenga.com, laurent.macret@twenga.com, herve.gouchet@twenga.com"
        withsymlinks="true"
        loadtwengaservers="true"
        basedir="/home/httpd-qa/webservices"
    >
        <externalproperty name="ref" description="Branch or tag to deploy" />
        <gitexport repository="git@git.twenga.com:webservices/webservices.git" ref="${REF}"
            destdir="${SERVER_QA_PHPWEB_ALL}:${BASEDIR}" exclude="config.php config-local" />
        <link server="${SERVER_QA_PHPWEB_ALL}" src="${BASEDIR}/config.php"
            target="/home/httpd-qa/config/webservices/config.php" />
        <link server="${SERVER_QA_PHPWEB_ALL}" src="${BASEDIR}/config-local"
            target="/home/httpd-qa/config/webservices/config-local" />
    </env>

    <env
        name="prod"
        mailto="devaa@twenga.com, laurent.macret@twenga.com, herve.gouchet@twenga.com"
        withsymlinks="true"
        loadtwengaservers="true"
        basedir="/home/httpd/webservices"
    >
        <externalproperty name="ref" description="Branch or tag to deploy" />
        <gitexport repository="git@git.twenga.com:webservices/webservices.git" ref="${REF}"
            destdir="${SERVER_PHPWEB_ALL}:${BASEDIR}" exclude="config.php config-local" />
        <link server="${SERVER_PHPWEB_ALL}" src="${BASEDIR}/config.php"
            target="/home/httpd/config/webservices/config.php" />
        <link server="${SERVER_PHPWEB_ALL}" src="${BASEDIR}/config-local"
            target="/home/httpd/config/webservices/config-local" />
    </env>
</project>