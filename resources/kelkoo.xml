<?xml version="1.0" encoding="UTF-8"?>
<project name="kelkoo">

    <env
        name="qa"
        mailto="devaa@twenga.com, francois.pasini@twenga.com, herve.gouchet@twenga.com"
        withsymlinks="true"
        loadtwengaservers="true"
        basedir="/cluster/lib/php/kelkoo_qa"
    >
        <externalproperty name="ref" description="Branch or tag to deploy" />
        <property name="servers" value="ebay@compute-01.eu1" />
        <gitexport repository="git@git.twenga.com:feeds/kelkoo.git" ref="${REF}" destdir="${TMPDIR}" />
        <rename src="${TMPDIR}/config_qa.php" dest="${TMPDIR}/config.php" />
        <sync src="${TMPDIR}/" destdir="${SERVERS}:${BASEDIR}" />
    </env>

    <env
        name="prod"
        mailto="devaa@twenga.com, francois.pasini@twenga.com, herve.gouchet@twenga.com"
        withsymlinks="true"
        loadtwengaservers="true"
        basedir="/cluster/lib/php/kelkoo"
    >
        <externalproperty name="ref" description="Branch or tag to deploy" />
        <property name="servers" value="ebay@compute-01.eu1" />
        <gitexport repository="git@git.twenga.com:feeds/kelkoo.git" ref="${REF}" destdir="${TMPDIR}" />
        <rename src="${TMPDIR}/config_prod.php" dest="${TMPDIR}/config.php" />
        <sync src="${TMPDIR}/" destdir="${SERVERS}:${BASEDIR}" />
    </env>
</project>
