<?xml version="1.0" encoding="UTF-8"?>
<project name="dedicated_pages">
	<env
		name="qa"
		mailto="devaa@twenga.com, francois.pasini@twenga.com, herve.gouchet@twenga.com"
		withsymlinks="true"
		loadtwengaservers="true"
		basedir="/cluster/lib/php/keyword_qa"
	>
		<property name="servers" value="prod@compute-01.eu1 prod@compute-01.us1" />
		<property name="config_file" value="config_pool_qa.php" />
		<call target="content" />
	</env>

	<env
		name="prod"
		mailto="devaa@twenga.com, francois.pasini@twenga.com, herve.gouchet@twenga.com"
		withsymlinks="true"
		loadtwengaservers="true"
		basedir="/cluster/lib/php/keyword"
	>
		<property name="servers" value="prod@compute-01.eu1 prod@compute-01.us1" />
		<property name="config_file" value="config_pool_prod.php" />
		<call target="content" />

	</env>

	<target name="content">
		<externalproperty name="ref_common" description="Ref. php-common" />
		<gitexport repository="git@git.twenga.com:php-common/php-common.git" ref="${REF_COMMON}"
			destdir="${TMPDIR}/Twenga" exclude="/build.xml /CHANGELOG /dependancies.ini /phpunit.xml.dist /Tests" />
		<cvsexport repository=":extssh:gaubry@fs1.twenga.com:/home/cvsroot" module="twengaweb/common"
			destdir="${TMPDIR}/twenga-common" />
		<cvsexport repository=":extssh:gaubry@fs1.twenga.com:/home/cvsroot" module="twengaweb/twengaproject/pagekeyword"
			destdir="${TMPDIR}/pagekeyword" />
		<rename src="${TMPDIR}/pagekeyword/${config_file}" dest="${TMPDIR}/pagekeyword/config.php"/>
		<sync src="${TMPDIR}/" destdir="${SERVERS}:${BASEDIR}"/>
	</target>
</project>
