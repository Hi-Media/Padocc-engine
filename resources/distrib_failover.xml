<project name="distrib_failover">
    <env name="qa" mailto="devaa@twenga.com, devtpn@twenga.com" withsymlinks="true" basedir="/home/httpd/primary.affinitad.com">
        <property name="servers" value="${SERVER_DISTRIB_WS_QA}"/>
        <call target="content"/>
    </env>
    <env name="prod" mailto="devaa@twenga.com, devtpn@twenga.com" withsymlinks="true" basedir="/home/httpd/primary.affinitad.com">
        <property name="servers" value="${SERVER_DISTRIB_WS}"/>
        <call target="content"/>
    </env>
    <target name="content">
        <externalproperty name="ref" description="Branch or tag to deploy"/>
        <gitexport repository="git@git.twenga.com:distribution/failover.git" ref="${REF}" destdir="${SERVERS}:${BASEDIR}" exclude="config.* config_application.php db.ini"/>
        <mkdir destdir="${SERVERS}:${BASEDIR}/cache/smarty" mode="777"/>
    </target>
</project>